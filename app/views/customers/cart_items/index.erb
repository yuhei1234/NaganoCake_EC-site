<div style="margin-top: 50px; margin-left: 100px;">
  <h4 style="width: 300px; text-align: center; background-color: #d5d5d5; margin-top: 150px; margin-left: 100px;">ショッピングカート</h4>
  <div>
    <%= button_to "削除する", cart_item_path(@cart_items), method: :delete %>
  </div>
</div>

<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <tr>数量</tr>
    <tr>小計</tr>
    <tr></tr>
  </tr>
  
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= attachment_image_tag cart_item, :image, :fill, 20px, 20px, fallback: "no_image.jpg" %>
        <%= @item(cart_item.item_id).name %>
      </td>
      <td>
        <%= @item(cart_item.item_id).price * 1.10).round %>
      </td>
      <td>
        <%= form_with model: @cart_item, local: true do |f| %>
          <%= f.text_field :amount %>
          <%= f.submit "変更", class: "btn btn-primary" %>
        <% end %>
      </td>
      <td>
        <%= @item(cart_item.item_id).price * cart_item.amount %>
      </td>
      <td>
        <%= button_to "削除する", cart_item_path(cart_item), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

<div>
  <div>
    <%= button_to "買い物を続ける", customers_items_path, class: "btn btn-m btn-primary" %>
  </div>
  <div>
    <table>
      <tr>
        <th>合計金額</th>
        <td>
          aaa
        </td>
      </tr>
    </table>
  </div>
</div>

<div>
  <%= button_to "情報入力に進む", "#", class: "btn btn-m btn-succsess" %>
</div>
