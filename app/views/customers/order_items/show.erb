<div style="margin-top: 50px; margin-left: 100px;">
  <h4 style="width: 200px; text-align: center; background-color: #d5d5d5;">注文履歴詳細</h4>
</div>

<div>
  <div class="col-lg-6">
    <h4>注文情報</h4>
    <table>
      <tr>
        <th>注文日</th>
        <td><%= @order.create_at %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= @order.post_number %>
          <%= @order.address %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.progress_status %></td>
      </tr>
    </table>
  </div>
  
  <div class="col-lg-4">
    <h4>請求情報</h4>
    <table>
      <tr>
        <th>商品合計</th>
        <td><%= @order.total_price %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= (@order.total_price + @order.shipping_cost) %></td>
      </tr>
    </table>
  </div>
</div>
<div>
  <h4>注文内容</h4>
  <table>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
    
    <tr>
      <td><%= @order_item.name %></td>
      <td><%= @order_item.price %></td>
      <td><%= @order_item.amount %></td>
      <td><%= (@order_item.price * @order_item.amount) %></td>
    </tr>
  </table>
</div>