<div style="margin-top: 50px; margin-left: 100px;">
  <h4 style="width: 140px; text-align: center; background-color: #d5d5d5;">注文履歴詳細</h4>
</div>

<div>
  <% @orders.each do |orders| %>
    <div class="">
      <%= "購入者" %>
      <% link_to managers_customer_path(order) do %>
        <%= order.name %>
      <% end %>
    </div>
    <div class="">
      <%= "配送先" %><%= order.address %>
    </div>
    <div>
      <%= "支払方法" %><%= order.payment_method %>
    </div>
    <div>
      <%= "注文ステータス" %>
      <%= form_with model: @order, local: true do |f| %>
        <%= f.select :progress_status %>
      <% end %>
      <% button_to "更新", managers_customer_path(order) %>
    </div>
  <% end %>
</div>

<table class="table table-striped", style="margin-top: 50px; margin-left: 50px; width: 60%;">
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
    <th></th>
  </tr>
  <% @order.each do |order| %>
    <tr>
      <td><%= order.name %></td>
      <td><%= order.price %></td>
      <td><%= order.number %></td>
      <td><%= order.total_price %></td>
      <td><%= order.progress_status %></td>
      <td>
        <%= button_to "更新", managers_customer_path(order) %>
      </td>
    </tr>
  <% end %>
</table>
