
<!----css => app/assets/stylesheets/managers/items/items_index.scss>-->

<h4 class="items-index">商品一覧</h4>

<div class="items-new-button">
  <%= link_to new_managers_item_path do %>
    <i class="fas fa-plus-circle"></i>
  <% end %>
</div>

<table class="table table-striped tabele-items-index">
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to managers_item_path(item) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= (item.price).to_s(:delimited) %></td>
      <td>
        <%= item.genre.name %>
      </td>
      <td>
        <% if item.is_active == true %>
          <%= "販売中" %>
        <% else %>
          <%= "販売停止中" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<div class="items-paginate">
  <%= paginate @items %>
</div>