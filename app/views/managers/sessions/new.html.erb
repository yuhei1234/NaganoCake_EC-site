<div class="manager-session">
  <h4 class="manager-session-title">管理者ログイン</h4>

  <%= form_with model: @manager, url: manager_session_path, local: true do |f| %>
    <div class="manager-session-mail">
      <%= "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="manager-session-pass">
      <%= "パスワード" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    
    <div class="manager-session-signin">
      <%= f.submit "ログイン", class: "btn btn-m btn-info" %>
    </div>
  <% end %>
</div>

